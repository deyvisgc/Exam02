<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/gradient"

    tools:context="com.example.deyvis.exam02.Login">

    <LinearLayout
        android:padding="24dp"

        android:layout_margin="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:inputType="textEmailAddress"
                android:textSize="20sp"
                app:met_baseColor="#0e0e0e"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="20"
                app:met_primaryColor="?colorAccent"
                app:met_singleLineEllipsis="true" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                android:inputType="textPassword"
                android:textSize="20dp"
                app:met_baseColor="#0e0e0e"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="20"
                app:met_primaryColor="?colorAccent"
                app:met_singleLineEllipsis="true" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_signin"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#000000"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#00b899"
                fancy:fb_focusColor="#057663"
                fancy:fb_radius="30dp"
                fancy:fb_text="Iniciar sesión"
                fancy:fb_textSize="34sp"
                fancy:fb_textColor="#FFFFFF" />
            <TextView
                android:onClick="register"
                android:gravity="center"
                android:padding="6dp"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿No tienes cuenta? Regístrate."/>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>




